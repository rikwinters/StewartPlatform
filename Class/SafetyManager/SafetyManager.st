                          // SDO message
                          _memcpy(ptr1:=pHelp, ptr2:=pDO, cntr:=pPara^.aPara[0]$UDINT);
                          
                          MyPara.aPara[1] := pTempMem$DINT;
                          
                          NewInst(#MyPara, #MyResult);

                          // path can exist only once in a system
                          return;
                        end_if;
                        
                        pHelpSlave := pHelpSlave^.pNext;
                      end_while;
                      
                      pHelpConfig := pHelpConfig^.pNext;
