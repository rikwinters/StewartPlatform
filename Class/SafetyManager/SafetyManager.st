      if pHelpManaging^.InfoBits.IsSynchron | OverrideSync then
        pHelpManaging^.pThis^.NewInst(pPara, pResult);
      end_if;
      
      pHelpManaging := pHelpManaging^.pNext;
    end_while;
  end_if;  

END_FUNCTION


